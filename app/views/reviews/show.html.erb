<br>
<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'All Reviews', reviews_path %>

<h3><%= @review.title %><br></h3>
<%= @review.created_at.strftime("%m-%d-%Y") %><br>
By username <br>
<%= image_tag @review.img_url %>
<br><br>
<% if @bowl %>
    <h4>Bowl Info:</h4>
    Price: $<%= @bowl.price %><br>
    Broth: <%= @bowl.broth %><br>
    Noodle: <%= @bowl.noodle %><br>
    Protein: <%= @bowl.protein %><br>
    Vegetarian? <%= @bowl.is_veg %><br>
  <% else %>
    <%= link_to "Add a bowl  ", new_review_bowl_path(@review) %>
  <% end %>
  <br><br>
<%= @review.content %><br>
<h3>Comments <%= link_to "+  ", new_review_comment_path(@review) %></h3>

<% if @comments %>
  <% @comments.each do |c| %>
  <%= c.name %><br>
  <%= c.created_at.strftime("%m-%d-%Y") %><br>
  <%= c.comment %><br>
  <%= link_to "(edit)", edit_review_comment_path(c.review_id, c) %>
  <br><br>
  <% end %>
<% end %>

<br>
