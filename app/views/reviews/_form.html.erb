<div class="form">
<%= form_for @review do |f| %>
<div class="formitem">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="formitem">
  <%= f.label :image %>
  <%= f.text_field :img_url %>
</div>
<div class="formitem">
  <%= f.label :content %><br>
  <%= f.text_area :content, class: "contentinput"%>
</div>
<div class="formbutton">
  <%= f.submit %>
</div>
<% end %>
<%= form_for @review, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
</div>
