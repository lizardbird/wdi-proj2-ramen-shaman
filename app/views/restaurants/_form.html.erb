<div class="form">
  <%= form_for @restaurant do |f| %>
    <div class="formitem">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="formitem">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div class="formitem">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="formitem">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="formitem">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>
    <div class="formitem">
      <%= f.label :image %>
      <%= f.text_field :img_url %>
    </div>
    <div class="formbutton">
      <%= f.submit %>
    </div>
  <% end %>

  <%= form_for @restaurant, method: :delete do |f| %>
    <%= f.submit "Delete!", class: "delete" %>
  <% end %>
</div>
